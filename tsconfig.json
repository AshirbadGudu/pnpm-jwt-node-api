{
  "compilerOptions": {
    "target": "es2016",
    "module": "node16",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  },
  "include": [
    "server/**/*",
    "scripts/**/*"
  ]
}